@model Produto
@{
    ViewData["Title"] = "Detalhes e movimentações do produto " + Model.Nome;
}

<div class="container">
    <div class="row">
        <div class="col-10 border border-light rounded p-5">
            <h5 class="text-primary"><strong>Detalhes e movimentações de produto @Model.Nome</strong></h5>
            <hr />
            <h6>Quantidade - @Model.Quantidade</h6>
            <h6>Preço - @Model.Preco</h6>
            <h6>Categoria - @Model.Categoria.Nome</h6>
            <hr />


            <div class="container border border-light rounded shadow p-5">
                <div class="row">
                    <div class="col-8">
                        <h6>Movimentações</h6>
                    </div>
                    <div class="col-4">
                        <a asp-action="NovaMovimentacao" asp-controller="Movimentacoes" asp-route-produtoId="@Model.ProdutoId" class="btn btn-sm btn-outline-success"></a>
                        Nova movimentação
                    </div>
                </div>
                <hr />
               @await Component.InvokeAsync("Movimentacoes", @Model.ProdutoId)
           </div>
        </div>
    </div>
</div>